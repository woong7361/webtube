doctype html 
html(lang ="ko")
    head   
        title #{pageTitle} | #{locals.siteName} 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        
    body 
        header
            h1=pageTitle
        nav 
            ul 
                li 
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/") Home
                li 
                    a(href="/search") Search 
                if locals.logedIn
                    li 
                        a(href="/users/logout") Log out
                    li 
                        a(href="/my-profile") #{locals.loggedInUser.name}'s Profile 
                else 
                    li 
                        a(href="/join") Join  
                    li 
                        a(href="/login") Login

        main 
            block content 
        include partials/footer.pug 